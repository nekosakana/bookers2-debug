<div data-turbolinks="false">
<table id="comments" class="table table-hover table-inverse">
	<% book.book_comments.each do |book_comment| %>
		<tr id="comment-<%= book_comment.id %>">
			<td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg", size: "50x50") %></td>
			<td><%= book_comment.user.name %></td>
			<td><%= book_comment.comment %></td>
			<td>
				<% if book_comment.user == current_user%>
			  		<div>
    					<%= link_to "Destroy", book_book_comment_path(book,book_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
			  		</div>
				<% end %>
			</td>
		</tr>
	<% end %>
</table>
</div>
